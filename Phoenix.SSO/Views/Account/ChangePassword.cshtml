@model Phoenix.SSO.SettingModels.ChangePassword

@{
    Layout = "_Layout";
}

<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card">

                    <div class="card-body p-3">

                        <div class="text-center m-auto">
                            <h4 class="text-dark-50 text-center mt-3">تغییر کلمه رمز</h4>
                            <p class="text-muted mb-4">لطفا موارد زیر را برای تغییر کلمه رمز وارد نمایید.</p>
                        </div>

                        <partial name="_ValidationSummary"/>

                        <form method="post">

                            <div class="mb-3">
                                <label asp-for="CurrentPassword" class="form-label">کلمه رمز فعلی</label>
                                <input class="form-control" type="password" asp-for="CurrentPassword" required>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">کلمه رمز جدید</label>
                                <input class="form-control" type="password" asp-for="Password" required>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RePassword" class="form-label">تکرار کلمه رمز جدید</label>
                                <input class="form-control" type="password" asp-for="RePassword" required>
                            </div>

                            <div class="d-grid text-center mt-4">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-key mx-1"></i>
                                    انجام عملیات
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>